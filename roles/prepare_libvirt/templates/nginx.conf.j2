# nginx
user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 1024;
}

stream {
log_format basic '$remote_addr [$time_local] '
                 '$protocol $status $bytes_sent $bytes_received '
                 '$session_time "$upstream_addr" '
                 '"$upstream_bytes_sent" "$upstream_bytes_received" "$upstream_connect_time"';

    upstream apib {
            least_conn;
            server {{ groups['bootstrap'][0] }}.{{ openshift.name }}.{{ net.domain }}:6443;
{% for c in groups['control'] %}
            server {{ c }}.{{ openshift.name }}.{{ net.domain }}:6443;
{% endfor %}
    }

    server {
            listen          6443;
            proxy_pass      apib;
            proxy_next_upstream on;
            proxy_timeout   30s;
            proxy_responses 1;
            error_log /var/log/nginx/stream_apib.log warn;
    }

    upstream configureb {
            least_conn;
            server {{ groups['bootstrap'][0] }}.{{ openshift.name }}.{{ net.domain }}:22623;
{% for c in groups['control'] %}
            server {{ c }}.{{ openshift.name }}.{{ net.domain }}:22623;
{% endfor %}
    }

    server {
            listen          22623;
            proxy_pass      configureb;
            proxy_next_upstream on;
            error_log /var/log/nginx/stream_configureb.log warn;
    }
    upstream ingressnosslb {
            least_conn;
{% for c in groups['control'] %}
            server {{ c }}.{{ openshift.name }}.{{ net.domain }}:80;
{% endfor %}
{% for w in groups['worker'] %}
            server {{ w }}.{{ openshift.name }}.{{ net.domain }}:80;
{% endfor %}
    }

    server {
            listen          80;
            proxy_pass      ingressnosslb;
            proxy_next_upstream on;
            proxy_timeout   30s;
            proxy_responses 1;
            error_log /var/log/nginx/stream_ingressnosslb.log warn;
    }

    upstream ingresssslb {
            least_conn;
{% for c in groups['control'] %}
            server {{ c }}.{{ openshift.name }}.{{ net.domain }}:443;
{% endfor %}
{% for w in groups['worker'] %}
            server {{ w }}.{{ openshift.name }}.{{ net.domain }}:443;
{% endfor %}
    }

    server {
            listen          443;
            proxy_pass      ingresssslb;
            proxy_next_upstream on;
            proxy_timeout   30s;
            proxy_responses 1;
            error_log /var/log/nginx/stream_ingresssslb.log warn;
    }
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 2048;

    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    include /etc/nginx/conf.d/*.conf;

    server {
        listen       8000 default_server;
        listen       [::]:8000 default_server;
        server_name  _;
        root         /usr/share/nginx/html;

        include /etc/nginx/default.d/*.conf;

        location / {
        }

        error_page 404 /404.html;
            location = /40x.html {
        }

        error_page 500 502 503 504 /50x.html;
            location = /50x.html {
        }
    }
}
